extends layout

block content
    ul(class="nav nav-tabs")
        li(role="presentation" class="active")
            a(href="/") ShitPost.org
        li(role="presentation")
            a(href="/login") Login
        li(role="presentation")
            a(href="/register") Register
    h1.center= title
    p.center Welcome to #{title}
    .container
        each tag in tags
                .testDiv
                    .col.s12.m6
                        .card.blue-grey.darken-1
                            a(href="/tags/"+tag.id+"/top_posts/10")
                                .card-content.white-text
                                    span.card-title=tag.title

